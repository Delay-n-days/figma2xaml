<UserControl x:Class="YourNamespace.ComplexNestedGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <!-- ComplexNestedGrid 容器 -->
    <Border
        Background="#F9FAFB">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Header 容器 -->
            <Border
                Background="#FFFFFF"
                Padding="24,16,24,16"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Logo -->
                    <TextBlock
                        Text="MyApp"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#111827"
                        Grid.Row="0"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Margin="0,0,16,0"/>
                    <!-- Title -->
                    <TextBlock
                        Text="Dashboard"
                        FontSize="18"
                        Foreground="#374151"
                        Width="600"
                        Grid.Row="0"
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,0,16,0"/>
                    <!-- UserInfo -->
                    <TextBlock
                        Text="Admin"
                        FontSize="16"
                        Foreground="#6B7280"
                        Grid.Row="0"
                        Grid.Column="2"
                        VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <!-- Content 容器 -->
            <Border
                Padding="24,20,24,20"
                Grid.Row="1"
                Grid.Column="0"
                Margin="0,0,0,12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <!-- MainCard 容器 -->
                    <Border
                        CornerRadius="8"
                        BorderBrush="#E5E7EB"
                        BorderThickness="1"
                        Background="#FFFFFF"
                        Padding="20"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.RowSpan="2"
                        Margin="0,0,20,20">
                        <StackPanel>
                            <!-- CardTitle -->
                            <TextBlock
                                Text="数据概览"
                                FontSize="18"
                                Foreground="#111827"
                                Margin="0,0,0,16"/>
                            <!-- Stats 容器 -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!-- Stat1 容器 -->
                                <Border
                                    CornerRadius="6"
                                    Background="#F3F4F6"
                                    Padding="16,12,16,12"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="0,0,12,12">
                                    <StackPanel>
                                        <!-- Label -->
                                        <TextBlock
                                            Text="总用户"
                                            FontSize="14"
                                            Foreground="#6B7280"
                                            Margin="0,0,0,8"/>
                                        <!-- Value -->
                                        <TextBlock
                                            Text="1,234"
                                            FontSize="24"
                                            FontWeight="Bold"
                                            Foreground="#111827"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
            <!-- Footer 容器 -->
            <Border
                Background="#F9FAFB"
                Padding="24,16,24,16"
                Grid.Row="2"
                Grid.Column="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!-- Copyright -->
                    <TextBlock
                        Text="© 2025 MyApp"
                        FontSize="14"
                        Foreground="#9CA3AF"
                        Grid.Column="0"/>
                    <!-- Version -->
                    <TextBlock
                        Text="v1.0.0"
                        FontSize="14"
                        Foreground="#9CA3AF"
                        Grid.Column="2"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>