<UserControl x:Class="YourNamespace.FormRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="38" d:DesignWidth="761">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- 工程名称: -->
        <TextBlock
            Text="工程名称:"
            FontSize="16.5"
            Foreground="#1F2937"
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            Margin="0,0,11,0"/>
        <!-- Input 容器 -->
        <Border
            CornerRadius="4"
            BorderBrush="#D1D5DB"
            BorderThickness="1"
            Background="#FFFFFF"
            Padding="13,9,13,9"
            Grid.Row="0"
            Grid.Column="1">
            <!-- NewProject3 -->
            <TextBlock
                Text="NewProject3"
                FontSize="16.5"
                Foreground="#1F2937"
                VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>