<!-- GridLayout 容器 -->
    <Border
        Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Cell1 -->
            <Border
                Background="#FF5733"
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,10,10"/>
            <!-- Cell2 -->
            <Border
                Background="#33FF57"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,10,10"/>
            <!-- Cell3 -->
            <Border
                Background="#3357FF"
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,10,0"/>
        </Grid>
    </Border>