<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设备列表" Width="1000" Height="600">
    
    <!-- 根容器：3行Grid布局 -->
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>   <!-- 顶部控制区 -->
            <RowDefinition Height="*"/>    <!-- 表格区域 -->
            <RowDefinition Height="130"/>  <!-- 底部信息区 -->
        </Grid.RowDefinitions>

        <!-- ========== 第一行：顶部控制区 ========== -->
        <Grid Grid.Row="0" Margin="20,15,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- 左侧按钮组 -->
                <ColumnDefinition Width="*"/>     <!-- 中间间隔 -->
                <ColumnDefinition Width="Auto"/>  <!-- 站号控制 -->
                <ColumnDefinition Width="*"/>     <!-- 右侧间隔 -->
                <ColumnDefinition Width="Auto"/>  <!-- 右侧提示 -->
            </Grid.ColumnDefinitions>

            <!-- 左侧按钮组 -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- 开始扫描按钮 -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                        CornerRadius="3" Padding="15,8" Margin="0,0,10,0">
                    <TextBlock Text="开始扫描" FontSize="14" Foreground="#333333"/>
                </Border>
                
                <!-- 停止扫描按钮 -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                        CornerRadius="3" Padding="15,8">
                    <TextBlock Text="停止扫描" FontSize="14" Foreground="#333333"/>
                </Border>
            </StackPanel>

            <!-- 站号范围控制组 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="站号范围" FontSize="14" Foreground="#333333" 
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                
                <!-- 起始站号输入框 -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                        Width="50" Height="30" CornerRadius="3" Margin="0,0,5,0">
                    <TextBlock Text="1" FontSize="14" Foreground="#333333" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="—" FontSize="14" Foreground="#333333" 
                           VerticalAlignment="Center" Margin="5,0"/>
                
                <!-- 结束站号输入框 -->
                <Border Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                        Width="50" Height="30" CornerRadius="3" Margin="5,0,0,0">
                    <TextBlock Text="16" FontSize="14" Foreground="#333333" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>

            <!-- 右侧提示 -->
            <Border Grid.Column="4" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                    CornerRadius="3" Padding="15,8" VerticalAlignment="Center">
                <TextBlock Text="设备无法连接？" FontSize="14" Foreground="#0066CC"/>
            </Border>
        </Grid>

        <!-- ========== 第二行：表格区域 ========== -->
        <Grid Grid.Row="1" Margin="20,0,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>  <!-- 表头 -->
                <RowDefinition Height="*"/>   <!-- 数据区 -->
            </Grid.RowDefinitions>

            <!-- 表头行 -->
            <Grid Grid.Row="0" Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>   <!-- 行号 -->
                    <ColumnDefinition Width="150"/>  <!-- 对象名 -->
                    <ColumnDefinition Width="150"/>  <!-- 对象类型 -->
                    <ColumnDefinition Width="100"/>  <!-- 站号 -->
                    <ColumnDefinition Width="120"/>  <!-- 波特率 -->
                    <ColumnDefinition Width="120"/>  <!-- 版本 -->
                    <ColumnDefinition Width="*"/>    <!-- 参数版本 -->
                </Grid.ColumnDefinitions>

                <!-- 表头单元格 -->
                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                    <TextBlock Text="行号" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <Border Grid.Column="1" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                    <TextBlock Text="对象名" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                    <TextBlock Text="对象类型" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <Border Grid.Column="3" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                    <TextBlock Text="站号" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <Border Grid.Column="4" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                    <TextBlock Text="波特率" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <Border Grid.Column="5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,1">
                    <TextBlock Text="版本" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                
                <Border Grid.Column="6" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
                    <TextBlock Text="参数版本" FontSize="13" Foreground="#666666" 
                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Grid>

            <!-- 数据区域（空白占位） -->
            <Border Grid.Row="1" Background="White" BorderBrush="#E0E0E0" BorderThickness="1,0,1,1">
                <Rectangle Fill="#FAFAFA"/>
            </Border>
        </Grid>

        <!-- ========== 第三行：底部信息区 ========== -->
        <Grid Grid.Row="2" Margin="20,0,20,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>  <!-- 状态信息行 -->
                <RowDefinition Height="*"/>   <!-- 存储位置设置 -->
            </Grid.RowDefinitions>

            <!-- 状态信息行 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="在线对" FontSize="13" Foreground="#666666" Margin="0,0,10,0"/>
                <TextBlock Text="0" FontSize="13" Foreground="#0066CC" FontWeight="Bold" Margin="0,0,20,0"/>
                <TextBlock Text="扫描完成。" FontSize="13" Foreground="#666666"/>
            </StackPanel>

            <!-- 存储位置设置 -->
            <Border Grid.Row="1" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" 
                    CornerRadius="3" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>  <!-- 标签列 -->
                        <ColumnDefinition Width="*"/>    <!-- 输入框列 -->
                        <ColumnDefinition Width="40"/>   <!-- 按钮列 -->
                    </Grid.ColumnDefinitions>

                    <!-- 工程名称行 -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="工程名称:" FontSize="13" 
                               Foreground="#333333" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Border Grid.Row="0" Grid.Column="1" Background="White" BorderBrush="#CCCCCC" 
                            BorderThickness="1" CornerRadius="2" Margin="0,0,10,5">
                        <TextBlock Text="NewProject3" FontSize="13" Foreground="#333333" 
                                   VerticalAlignment="Center" Margin="8,0"/>
                    </Border>

                    <!-- 存储路径行 -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="存储路径:" FontSize="13" 
                               Foreground="#333333" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Border Grid.Row="1" Grid.Column="1" Background="White" BorderBrush="#CCCCCC" 
                            BorderThickness="1" CornerRadius="2" Margin="0,5,10,0">
                        <TextBlock Text="D:\Inovance\InoDriverShop\MD\Project" FontSize="13" 
                                   Foreground="#333333" VerticalAlignment="Center" Margin="8,0"/>
                    </Border>
                    
                    <!-- 浏览按钮（文件夹图标占位） -->
                    <Border Grid.Row="1" Grid.Column="2" Background="#F0F0F0" BorderBrush="#CCCCCC" 
                            BorderThickness="1" CornerRadius="2" Width="30" Height="25" 
                            VerticalAlignment="Center" Margin="0,5,0,0">
                        <Rectangle Fill="#CCCCCC" Width="18" Height="15"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
